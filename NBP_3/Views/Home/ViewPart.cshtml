@model NBP_3.Models.MongoAutoPart
@{
    ViewData["Title"] = "Auto Part";
}

<h1>@Model.Name</h1>

<table>

    <tr>
        <td>Price: </td>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th rowspan="2">Description: </th>
        <th rowspan="2">@Model.Description</th>
    </tr>
    <tr>

    </tr>
    <tr>
        <td>Brand: </td>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <td>Tags: </td>
        <td>@foreach(var v in Model.Tags){
                <span>@v</span>
            }</td>
    </tr>
     <tr>
        <td>Cars: </td>
        <td>@foreach(var v in Model.Cars){
                <span>@v</span>
            }</td>
    </tr>
    <tr>
        <th rowspan="2" colspan="2"> <img src="@ViewBag.ImageDataUrl"/></th>
    </tr>
    <tr>

    </tr>
</table>

@if(User?.Identity?.IsAuthenticated ?? false){
                                    <a class="btn btn-default" asp-area="" asp-controller="Cart" asp-action="AddPartToCart" asp-route-id="@Model.Id" onclick="">Add To Cart</a>
}



@if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
        ViewBag.Message = null;
    }